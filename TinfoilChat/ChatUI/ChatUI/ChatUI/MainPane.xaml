<Window x:Class="ChatUI.MainPane"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window1" Height="512" Width="329">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Button Content="Chat_Window" Height="Auto" Width="100" Margin="6,6,6,6" Click="launch_chat" Grid.Row="0" />
        <Button Content="Login" Height="Auto" Width="100" Margin="6,6,6,6" Click="launch_login" Grid.Row="1" />
        <Button Content="About" Height="Auto" Width="100" Margin="6,6,6,6" Click="launch_about" Grid.Row="2" />


    </Grid>
</Window>
