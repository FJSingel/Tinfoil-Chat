<Window x:Class="ChatUI.HomePane"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Home" Height="477" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="80*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Add Friend" />
                <MenuItem Header="_New Chat" />
                <Separator />
                <MenuItem Header="_Close" />
            </MenuItem>
        </Menu>
        <DataGrid HorizontalAlignment="Stretch" Margin="6" VerticalAlignment="Stretch" Grid.Row="2" SelectionChanged="DataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Alias" Binding="{Binding Alias}" Width="30*"/>
                <DataGridTextColumn Header="IP" Binding="{Binding IP}" Width="20*"/>
            </DataGrid.Columns>
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Details}" Margin="6" />
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>
    </Grid>
</Window>
