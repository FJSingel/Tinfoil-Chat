<Window x:Class="ChatUI.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChatWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80*" />
            <RowDefinition Height="15*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200*" />
            <ColumnDefinition Width="100*" />
        </Grid.ColumnDefinitions>
        <ScrollViewer>
            <TextBox Height="Auto" HorizontalAlignment="Stretch" Margin="6,10,6,2" Name="textBoxChatPane" VerticalAlignment="Stretch" Width="Auto" Grid.Row="0" />
        </ScrollViewer>
        <TextBox Height="Auto" HorizontalAlignment="Stretch" Margin="6,6,6,6" Name="textBoxEntryField" VerticalAlignment="Stretch" Width="Auto" Grid.Row="1" Grid.Column="0" KeyDown="textBoxEntryField_KeyDown" />
        <TextBox BorderThickness="0"  IsReadOnly="True" Height="Auto" HorizontalAlignment="Stretch" Margin="6,6,6,6" Name="UsersPane" VerticalAlignment="Stretch" Width="Auto" Grid.Row="0" Grid.Column="1" />
        <Button Height="Auto" HorizontalAlignment="Stretch" Margin="6,6,6,6" Name="sendBtn" VerticalAlignment="Stretch" Width="Auto" Grid.Row="1" Grid.Column="1" Content="Send" />
    </Grid>
</Window>
